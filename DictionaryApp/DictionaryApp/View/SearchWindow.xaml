<Window x:Class="DictionaryApp.View.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictionaryApp.View"
        mc:Ignorable="d"
        Title="SearchWindow" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid
        Background="#FFFFEAE2">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0">
            <!-- search bar, i can create the search bar outside this grid ig -->
            <!--plus category slide button-->
        </Grid>

        <Grid
            Grid.Row="1">
            <!-- output of the search bar :))))-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
        </Grid>
        
        <Button Content="Back" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="50" 
                Height="30" 
                FontSize="20"
                Background="#FFFFDAC5" 
                BorderBrush="#FFF9AD91" Click="GoToMainWindow"
                />
        
    </Grid>
</Window>
